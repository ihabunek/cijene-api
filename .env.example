# Environment configuration for Cijene API
# Copy this file to .env and customize the values for your environment

# =================
# Application Settings
# =================
VERSION=0.1.0
DEBUG=false
DEV_MODE=false
TIMEZONE=Europe/Zagreb

# =================
# Server Configuration
# =================
HOST=0.0.0.0
PORT=8000
BASE_URL=http://localhost:8000
REDIRECT_URL=https://cijene.dev

# =================
# Database Configuration
# =================
# PostgreSQL connection settings
POSTGRES_DB=cijene
POSTGRES_USER=cijene_user
POSTGRES_PASSWORD=cijene_pass
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Database connection string (used by API service)
DB_DSN=postgresql://cijene_user:cijene_pass@db/cijene
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# =================
# Data Storage
# =================
# Directory for storing archive files
ARCHIVE_DIR=/app/data
# Output directory for crawler results
CRAWLER_OUTPUT_DIR=/app/output

# =================
# Adminer Configuration (Development)
# =================
ADMINER_DEFAULT_SERVER=db
ADMINER_DEFAULT_DB_NAME=cijene
ADMINER_DEFAULT_USERNAME=cijene_user